<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory name="history">
        <!-- DB connection settings -->
        <!--org.apache.derby.jdbc.EmbeddedDriver-->
        <!--org.postgresql.Driver-->
        <property name="connection.driver_class">
            org.postgresql.Driver
        </property>

        <!--jdbc:derby:history_db;create=true-->
        <!--jdbc:postgresql:holdem-->
        <property name="connection.url">
            jdbc:postgresql:holdem
        </property>
        <property name="connection.username">
            postgres
        </property>
        <property name="connection.password">
            23vdfgMM
        </property>

        
        <!-- SQL settings -->
        <!--org.hibernate.dialect.DerbyDialect-->
        <!--org.hibernate.dialect.PostgreSQLDialect-->
        <property name="dialect">
            org.hibernate.dialect.PostgreSQLDialect
        </property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>
        <property name="transaction.factory_class">
            org.hibernate.transaction.JDBCTransactionFactory
        </property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">
            org.hibernate.cache.HashtableCacheProvider
            <!--org.hibernate.cache.NoCacheProvider-->
        </property>

        <!-- Echo all executed SQL to stdout -->
        <!--<property name="show_sql">true</property>-->

        <!-- Drop and re-create the database schema on startup -->
        <!--<property name="hbm2ddl.auto">-->
            <!--create-->
        <!--</property>-->

        
        <!-- Mappings -->
        <mapping class="ao.persist.PlayerHandle"/>
        <mapping class="ao.persist.Event"/>
        <mapping class="ao.persist.HandHistory"/>
        <mapping class="ao.holdem.model.card.Hole"/>
        <mapping class="ao.holdem.model.card.Community"/>
        <mapping class="ao.holdem.model.Money"/>
        <!--<mapping class="ao.ai.opp_model.neural.def.retro.LearnerSet"/>-->
        <!--<mapping class="ao.ai.opp_model.neural.joone.BackpropLearner"/>-->
    </session-factory>
</hibernate-configuration>